@{
    ViewData["Title"] = "Acesso Negado";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2 class="auth-title">
                <i class="fas fa-shield-alt me-2 text-warning"></i>
                Acesso Negado
            </h2>
            <p class="auth-subtitle">Você não tem permissão para acessar este recurso</p>
        </div>

        <div class="text-center mb-4">
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Sem permissão!</strong> Este recurso requer autorização específica.
            </div>

            <div class="mb-4">
                <i class="fas fa-lock" style="font-size: 4rem; color: #ffc107; opacity: 0.7;"></i>
            </div>

            <p class="text-muted mb-4">
                Se você acredita que deveria ter acesso a este recurso, entre em contato com o administrador do sistema.
            </p>
        </div>

        <div class="auth-footer">
            <div class="d-grid gap-2">
                <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>
                    Voltar
                </a>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>
                        Ir para Início
                    </a>
                }
                else
                {
                    <a asp-action="Login" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Fazer Login
                    </a>
                }
            </div>
        </div>
    </div>
</div>